<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Activities.AddHome1Activity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_announcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:textColorHint="#000"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_announcement_title"
            android:textSize="20sp"
            android:textColorHint="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Announcement title "/>

    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:id="@+id/ll_select_country"
        android:layout_below="@+id/til_announcement"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"

        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_select_country"
            android:text="Country:"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner_select_country"
            android:layout_marginStart="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_region"
        android:layout_below="@+id/ll_select_country"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"

        android:layout_height="wrap_content"
        android:textColorHint="#000"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_region"
            android:textSize="20sp"
            android:textColorHint="#000"
            android:hint="Region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_city"
        android:layout_below="@+id/til_region"
        android:textColorHint="#000"
        android:layout_marginBottom="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_city"
            android:textSize="20sp"
            android:textColorHint="#000"
            android:hint="City/town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_address_line"
        android:layout_below="@+id/til_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#000"
        android:layout_marginBottom="10dp"

        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_address_line"
            android:textSize="20sp"
            android:textColorHint="#000"
            android:hint="Address line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_zip_code"
        android:layout_below="@+id/til_address_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#000"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_zip_code"
            android:textSize="20sp"
            android:textColorHint="#000"
            android:inputType="number"
            android:hint="Zip code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_next_home_register_page"
        android:text="Next"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>