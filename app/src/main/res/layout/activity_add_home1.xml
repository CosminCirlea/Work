<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddHome1Activity">

    <include layout="@layout/toolbar_with_back_button"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_with_back_button"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_announcement"
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                style="@style/BasicText"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_announcement_title"
                    style="@style/BasicText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Announcement title "/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll_select_country"
                android:layout_below="@+id/til_announcement"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_select_country"
                    android:text="Country:"
                    style="@style/BasicText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinner_select_country"
                    android:layout_marginStart="5dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content">
                </Spinner>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_region"
                android:layout_below="@+id/ll_select_country"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_region"
                    android:textSize="@dimen/text_size_classic"
                    android:hint="Region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_city"
                android:layout_below="@+id/til_region"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_city"
                    android:textSize="@dimen/text_size_classic"
                    android:hint="City/town"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_address_line"
                android:layout_below="@+id/til_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_address_line"
                    android:textSize="@dimen/text_size_classic"
                    android:hint="Address line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_zip_code"
                android:layout_below="@+id/til_address_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_zip_code"
                    android:textSize="@dimen/text_size_classic"
                    android:inputType="text"
                    android:hint="Zip code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_next_home_register_page"
        android:text="Next"
        style="@style/BasicText"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:background="@drawable/round_button"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="GoToAddHome2"/>

</RelativeLayout>